@using HZ.MVC.FaKa.Areas.Admin.Models;
@{
    ViewBag.Title = "购前必看：";
}
<link rel="stylesheet" href="/Content/bootstrap.css" />
<link rel="stylesheet" href="http://www.bootcss.com/p/buttons/css/buttons.css">
<style>
    .goods:hover {
        color: green;
        cursor: pointer;
    }


    .table-a table {
        border: 1px solid #3CABEB;
    }
    /* css注释：只对table标签设置红色边框样式 */


    a:hover {
        color: #00b0ff;
    }

    a:hover, a:active {
        text-decoration: underline;
    }

    html {
        height: 100%;
    }

    body {
        min-height: 100%;
        position: relative;
    }

    h1 {
        font-size: 22px;
        line-height: 40px;
        margin: 30px 0 10px 0;
        color: #444444;
    }

    h2 {
        font-size: 16px;
        margin: 0 0 10px 0;
    }

    p {
        width: 100%;
        color: #999999;
        line-height: 40px;
    }



    #bottom {
        width: 100%;
        background: #fafafa;
        margin-top: 20px;
        padding: 50px 0;
    }

        #bottom ul {
            width: 1024px;
            margin: 0 auto;
        }

            #bottom ul li {
                width: 278px;
                float: left;
                padding-left: 36px;
                margin-left: 36px;
                border-left: 1px solid #e9eeef;
