@{
    ViewBag.Title = "购前必看：";
}

<style type="text/css">
    .wq-list {
        padding: 10px 0px;
    }

    .method-list-p {
        list-style: none;
        padding-left: 0;
        margin-bottom: 10px;
        color: #a9afb5 !important;
        text-align: left !important;
    }

    .method-list {
        list-style: none;
        margin-bottom: 0;
        padding-left: 0;
    }

    .method-list .method-alipay {
        display: inline;
        float: left;
        margin: 0 0px 0px 0;
    }

        .method-list .method-box {
            border: 1px solid #CCC;
            padding: 11px 12px;
            cursor: pointer;
        }

    .method-list .method-radio {
        display: none;
    }

    .method-list .method-alipay .method-box.method-current {
        background-color: #EFF9FF;
        border-color: #00AAEE;
    }

    .method-list .method-qqpay {
        display: inline;
        float: right;
        margin: 0 0px 0px 0;
    }
    label {
        font-weight: 300;
    }

    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: bold;
    }
    .method-list .method-qqpay .method-box.method-current {
        background-color: #EFF9FF;
        border-color: #00AAEE;
    }
    .method-list .method-box.method-current {
        border-width: 2px;
        padding: 10px 11px;
        border-color: #f37800;
        background-color: #FFF6E7;
    }
    .styled-select select {
        height: 36px;
        padding: 6px 27px 6px 15px;
        line-height: 1.57142857;
        background-color: #000000;
        color: #1C86EE;
    }

    .xxhhh {
        width: 100%;
        display: block;
        padding-right: 20px;
        padding-left: 8px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
<link rel="stylesheet" href="/Content/bootstrap.css" />
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>
                    @Html.Raw(ViewBag.Message)
                </h2>
            </hgroup>

            <p>
                @ViewBag.ZhuYi
            </p>

        </div>
    </section>
}
@using (Html.BeginForm("Order", "WxPay", FormMethod.Post, new { id = "frmOrder" }))
{
    Html.AntiForgeryToken();

    <div class="wq-list">
        <input type="hidden" name="user" value="0">

        <p class="method-list-p">请选择支付方式</p>
        <ul class="method-list clearfix">
            <li class="method-alipay">
                <input type="radio" name="paytype" value="3" class="method-radio" id="qqpay" checked="checked">
                <label class="method-box method-current" for="qqpay">
                    <img src="/Images/wx.png" alt="使用微信支付" width="94">
                </label>
            </li>
            <li class="method-qqpay">
                <input type="radio" name="paytype" value="2" class="method-radio" id="alipay">
                <label class="method-box" for="alipay">
                    <img src="/Images/alipay.png" alt="使用支付宝支付" width="94">
                </label>
            </li>
        </ul>


    </div>
    <div class="wq-list">
        <div class="styled-select">
            <p class="method-list-p">商品分类</p>
            <select class="xxhhh" name="bigname" id="bigname">
                <option value="0">==请选择商品分类==</option>
                <option style="color:red;background-color: #fff;" value="1">★各大影视会员★自动发货</option>
                <option style="color:red;background-color: #fff;" value="3">★9毛9秒杀商品★自动发货</option>
